<h1>Edit Graph</h1>

<p>Title: <%= @graph.title%></p>

<div class="row">
  <div class="span6">
    <%= form_for @graph do |f| %>
      <h4>Lines</h4>
      <%= f.fields_for :graph_lines do |l| %>
        <div class="form-group">
          <%= l.label :option %>
          <%= l.text_field :option %>
        </div>

        <div class="form-group">
          <%= l.label :metric %>
          <%= l.text_field :metric %>
        </div>

        <div class="form-group">
          <%= l.label :extractor %>
          <%= l.text_field :extractor %>
        </div>
      <% end %>
      <%= f.submit "Save", class: "btn btn-success" %>
    <% end %>
  </div>

  <div class="span8">
    <div class="graph"/>
      <div class="metric" data-url="<%= graph_path(@graph) %>"></div>
  </div>
</div>

